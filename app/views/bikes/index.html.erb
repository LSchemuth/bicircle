  <div class="container container-main">
    <div class="cards">
      <% @bikes.each do |bike| %>
        <%= link_to bike_path(bike), "data-toggle" => "modal", 'data-target' => '#exampleModal' do %>
        <div class="card-bike">
          <% if bike.photo.attached? %>
            <%= cl_image_tag bike.photo.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" />
          <% end %>
          <div class="card-bike-infos">
            <div>
              <h2><%= bike.title %></h2>
              <p><%= bike.description %></p>
            </div>
            <div class="card-bike-pricing textContainer">
              <h2>â‚¬<%= bike.price %> / day</h2>
            </div>
          </div>
        </div>
         <% end %>
         <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-body">
                <div class="container d-flex card mt-3">
                  <div class="card-body">
                    <h5 class="card-title"><%= bike.title %></h5>
                  </div>
                  <img class="card-img-top" src="..." alt="Card image cap">
                  <div class="card-body">
                    <p class="card-text"><%= bike.description %></p>
                  </div>
                  <div class="card mb-3 w-25 text-right ml-auto">
                    <div class="card-body ">
                      <h5 class="card-title"><%= bike.price %> / day</h5>
                      <p>Booking dates.</p>
                    </div>
                  <a href="#" class="btn btn-primary">Book me now!</a>
                  </div>
                </div>
                <%= link_to "Delete", bike_path(bike), class: "btn btn-danger btn-xs", method: :delete  %>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>


