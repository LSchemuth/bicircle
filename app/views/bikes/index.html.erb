  <div class="container container-main">
    <div class="cards">
      <% @bikes.each do |bike| %>
        <%= link_to bike_path(bike), "data-toggle" => "modal", 'data-target' => '#exampleModal' do %>
        <div class="card-bike">
        
          <% unless bike.photos.first.nil? %>
            <%= cl_image_tag bike.photos.first.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <img src="https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80" />
          <% end %>

          <div class="card-bike-infos">
            <div>
              <h2><%= bike.title %></h2>
              <p><i class="fas fa-star"></i><i class="fas fa-star"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></i> (<%= rand(8...78) %>)</p>
            </div>
            <div class="card-bike-pricing textContainer">
              <h2>â‚¬<%= bike.price %> / day</h2>
            </div>
          </div>
        </div>
         <% end %>

         <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">

              <div class="modal-header">
                <h5 class="card-title"><strong><%= bike.title %></strong></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>

              <div class="modal-body">

                <div id="carouselExampleControls" class="carousel slide" data-interval="false">
                  <div class="carousel-inner">
                      <div class="carousel-item active">
                        <%= cl_image_tag bike.photos.first.key, height: 300, width: 400, crop: :fill, class: "d-block w-100" %>
                      </div>
                    <% bike.photos.drop(1).each do |photo| %>
                      <div class="carousel-item">
                        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill, class: "d-block w-100" %>
                      </div>
                    <% end %>

                  </div>
                  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
              

                <div class="container d-flex card mt-3">
                  <div class="card-body">
                    <div class="content-wrapper">
                      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-owner avatar-bordered" />
                    </div>
                    <div class="content-wrapper">
                      <h5><strong>Description</strong></h5>
                      <p class="card-text"><%= bike.description %></p>
                    </div>

                    <div class="card mb-3 w-40 text-right ml-auto">
                      <div class="card-body ">
                        <h5 class="card-title"><%= bike.price %> / day</h5>
                        <label class="sr-only" for="inline-date">Start-Date</label>
                        <input type="date" class="form-control" id="inline-date" required>
                        <label class="sr-only" for="inline-date">Start-Date</label>
                        <input type="date" class="form-control" id="inline-date" required>                    </div>
                      <a href="#" class="btn btn-primary">Book me now!</a>
                  </div>

                  </div>

                </div>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>


