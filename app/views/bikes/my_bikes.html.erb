<div class="container container-main">
    <div class="cards">
      <% @my_bikes.each do |bike| %>
        <div class="card-bike">
        <%= link_to bike_path(bike) do %>
          <% if bike.photo.attached? %>
            <%= cl_image_tag bike.photo.key, height: 200, width: 320, crop: :fill %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", alt: "alttext", height: 200, width: 320 %>
          <% end %>
         <% end %>
          <div class="card-bike-infos">
            <div>
              <h2><%= bike.title %></h2>
              <p><%= bike.description %></p>
            </div>
            <div class="card-bike-pricing textContainer">
              <h2>â‚¬<%= bike.price %> / day</h2>
            </div>
          <div>
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_bike_path(bike) %>
            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, bike_path(bike), method: :delete  %>
          </div>
          </div>

        </div>
      <% end %>
  <%= link_to "Back to see all bikes", bikes_path %>
  </div>
</div>


