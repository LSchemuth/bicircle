<div class="container container-main">
    <div class="cards-my-bike">
      <% @my_bikes.each do |bike| %>
        <div class="card-bike card-my-bike">
        <%= link_to edit_bike_path(bike) do %>
          <% unless bike.photos.first.nil? %>
            <%= cl_image_tag bike.photos.first.key, height: 200, width: 400, crop: :fill %>
          <% else %>
            <%= image_tag "https://images.unsplash.com/photo-1485965120184-e220f721d03e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1050&q=80", alt: "alttext", height: 200, width: 400 %>
          <% end %>
         <% end %>
          <div class="card-bike-infos">
            <div>
              <h2><%= bike.title %></h2>
              <p><i class="fas fa-star"></i><i class="fas fa-star"><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i></i> (<%= rand(8...78) %>)</p>            </div>
            <div class="card-bike-pricing textContainer">
              <h2>â‚¬<%= bike.price %> / day</h2>
            </div>
          <div>
            <%= link_to '<i class="far fa-edit"></i>'.html_safe, edit_bike_path(bike) %>
            <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, bike_path(bike), method: :delete  %>
          </div>
          </div>

        </div>
      <% end %>
  <%= link_to "Back to Homepage", root_path %>
  </div>
</div>


