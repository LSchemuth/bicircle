<div class="container container-edit">
  <div class="form-wrapper">
    <h1>Ready to update <%= @bike.title %></h1>
    <%= simple_form_for [ @bike] do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :address %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Update this bike", class: "btn btn-danger mr-2" %>
    <%= link_to 'Delete this bike', bike_path(@bike), :confirm => 'Are you sure?', :method => :delete, class: "btn btn-primary mr-2" %>
    <%= link_to "Cancel", bikes_my_bikes_path %>
    <% end %>
  </div>
</div>
