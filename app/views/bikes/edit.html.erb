<div class="container">
  <h1>Ready to update <%= @bike.title %></h1>
  <%= simple_form_for [ @bike] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :location %>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Update this bike", class: "btn btn-primary" %>
<% end %>
</div>
