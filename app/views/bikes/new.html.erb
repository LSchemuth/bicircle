<div class="container">
  <h1>Lets add a new bike!</h1>
  <%= simple_form_for [ @bike] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit "Add this bike", class: "btn btn-primary" %>

<% end %>
</div>
