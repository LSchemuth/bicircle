<div class="container">
  <h1>Lets add a new bike!</h1>
  <%= simple_form_for [ @bike] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :price %>
  <%= f.input :address%>
  <%= f.input :photo, as: :file %>
  <%= f.submit "Add this bike", class: "btn btn-primary mr-2" %>
  <%= link_to "Cancel", bikes_path %>
<% end %>
</div>
